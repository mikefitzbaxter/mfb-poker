{% extends 'base.njk' %}

{% block appMeta %}
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="A boilerplate for NodeJS on Heroku using Bootstrap, Auth0, and jQuery">

	<!-- Page meta tags -->
	{% block pageMeta %}{% endblock pageMeta %}
{% endblock appMeta %}


<!-- App-specific CSS -->
{% block appCSS %}
	<!-- Google Fonts - Raleway and Open Sans -->
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700|Raleway:300,400" rel="stylesheet">
	
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	
	<!-- App Custom CSS -->
	<link rel="stylesheet" type="text/css" href="/css/app.css" />

	<!-- Page CSS files -->
	{% block pageCSS %}{% endblock pageCSS %}
{% endblock appCSS %}

<!-- App-specific content -->
{% block app %}
	<!-- #header -->
	<header class="navbar navbar-expand navbar-light bd-navbar">
		{{ app.title }}
	</header>
	
	<!-- Page -->
	<section id="page">
		{% block page %}{% endblock page %}
	</section><!-- /#page -->
{% endblock app %}

<!-- App-specific JS -->
{% block appJS %}
	<!-- jQuery from CDN -->
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha256-3edrmyuQ0w65f8gfBsqowzjJe2iM6n0nKciPUp8y+7E=" crossorigin="anonymous"></script>
	<!-- Popper (for Bootstrap) from CDN -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
	<!-- Bootstrap from CDN -->
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
	
	<!-- Base JS files -->
	<script src="/js/app.js"></script>

	<!-- Page JS files -->
	{% block pageJS %}{% endblock pageJS %}
{% endblock appJS %}